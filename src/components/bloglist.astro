---
const allPosts = await Astro.glob('../content/blog/*.md');
---

<div class="bg-white">
  <section id="blog">
    <div class="mx-auto max-w-6xl pb-32">
      <div class="mx-auto max-w-4xl">
        <h2 class="text-4xl font-bold tracking-tight text-slate-600 sm:text-4xl">
          Journal
        </h2>
        <p class="mt-2 text-xl leading-8 text-slate-600">
          Articles on product management, web development, publishing and digital marketing
        </p>
        <div
          class="mt-10 space-y-16 border-t border-slate-200 pt-10 sm:mt-16 sm:pt-16"
        >
        {allPosts.map((post) => 
        <article class="flex max-w-3xl flex-col items-start justify-between">
            <div class="flex items-center gap-x-4 text-md">
              <time datetime={post.frontmatter.date} class="text-slate-500"
                >{post.frontmatter.date}</time>
              <a
                href={post.url}
                class="relative z-10 rounded-full bg-slate-50 px-3 py-1.5 font-medium text-slate-600 hover:bg-slate-100"
                >{post.frontmatter.tag}</a
              >
            </div>
            <div class="group relative">
              <h3
                class="mt-3 text-xl font-bold leading-6 text-slate-700 group-hover:text-slate-600"
              >
                <a href={post.url}>
                  <span class="absolute inset-0"></span>
                  {post.frontmatter.title}
                </a>
              </h3>
              <p class="mt-5 line-clamp-3 text-lg leading-6 text-slate-600">
              {post.frontmatter.excerpt}
              </p>
            </div>
            <div class="relative mt-8 flex items-center gap-x-4">
              <img
                src={post.frontmatter.image}
                alt=""
                class="h-10 w-10 rounded-full bg-slate-50"
              />
              <div class="text-sm leading-6">
                <p class="font-semibold text-slate-900">
                  <a href="#">
                    <span class="absolute inset-0"></span>
                    Stefano Garavelli
                  </a>
                </p>
                <p class="text-slate-600">Product Owner</p>
              </div>
            </div>
          </article>
        )}
        </div>
      </div>
    </div>
  </section>
</div>
